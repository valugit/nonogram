html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="./style.css")
    title Nonogramo
  body
    header
      img(src="logo-n.png", alt="logo-n")

    - for (var i = 0; i < 10; i++)
      - for (var j = 0; j < 10; j++)
        input(type="checkbox", name="box", id="box"+i+"_"+j)

    .bg
      .grid
        .win Set Sail.
        .top
          each column in [[1], [3,2], [1,2,2], [1,1,2], [10], [6,2], [4,2], [2,2], [2], [1]]
            div
              each num in column
                div=num
        .side
          each row in [[1], [3], [1,2], [1,3], [1, 3], [2,4], [6], [1], [10], [8]]
            div
              each num in row
                div=num

        - for (var i = 0; i < 10; i++)
          .row
            - for (var j = 0; j < 10; j++)
              label(for="box"+i+"_"+j)


      img(src="logo-nonogramo.png", alt="logo-nonogramo")
